<UserControl x:Class="iDna.controls.iDnaRepeatSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iDna.controls"
			 xmlns:data="clr-namespace:iDna"
             mc:Ignorable="d" 
			 d:DataContext="{d:DesignInstance Type={x:Type data:iDnaRepeatSettingsDesignTime}}"
             d:DesignHeight="202.5" d:DesignWidth="435.5">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" FontSize="14" Text="Find repeats settings" FontWeight="Bold" Margin="8,0" />
		<local:iDnaMinMaxCtrl Grid.Row="1" Grid.Column="0" Margin="8,8" DataContext="{Binding MinMaxValues}" />

	</Grid>
</UserControl>
