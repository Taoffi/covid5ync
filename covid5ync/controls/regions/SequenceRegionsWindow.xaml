<Window x:Class="iDna.controls.SequenceRegionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iDna.controls"
		xmlns:data="clr-namespace:iDna"
        mc:Ignorable="d"
		ResizeMode="CanResizeWithGrip"
		Icon="{Binding Source={StaticResource imgCovid5ync48}, Path=Source}"
        Title="Manage sequence regions"
		Height="480" Width="560"
		d:DataContext="{d:DesignInstance Type={x:Type data:iDnaRegionIndex}, IsDesignTimeCreatable=True, CreateList=True}"
		Background="#FFF6F6F6"
		ShowInTaskbar="False"
		DataContext="{Binding SequenceNamedRegionList, Source={StaticResource mainSequence}, IsAsync=True}">
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition />
			<RowDefinition Height="32" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" FontSize="16" FontWeight="Bold" Text="Sequence regions" Margin="8,0" />

		<Button x:Name="buttonAddNew" 
				Grid.Row="0" Grid.Column="0" Margin="20,0"
				Height="24"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				MinWidth="100"
				Content="New region" 
				Click="buttonAddNew_Click" />
		
		<local:iDnaSequenceRegionListCtrl Grid.Row="1" DataContext="{Binding }" />
	</Grid>
</Window>
